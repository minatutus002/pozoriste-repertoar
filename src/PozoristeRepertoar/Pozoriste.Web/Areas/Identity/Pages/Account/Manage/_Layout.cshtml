@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout !=  null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<div class="section-surface p-4 p-lg-5 mb-4 manage-shell">
    <div class="mb-4">
        <div class="text-muted text-uppercase small fw-semibold">Moj nalog</div>
        <h1 class="predstava-title mb-1">Podesavanja profila</h1>
        <p class="text-muted mb-0">Upravljaj osnovnim podacima, lozinkom i bezbednosnim opcijama.</p>
    </div>

    <div class="row g-4">
        <div class="col-12 col-lg-4">
            <div class="manage-nav">
                <partial name="_ManageNav" />
            </div>
        </div>
        <div class="col-12 col-lg-8">
            <div class="manage-content">
                @RenderBody()
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
