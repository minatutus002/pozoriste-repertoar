@page
@model LoginModel

@{
    ViewData["Title"] = "Prijava";
    Layout = "/Views/Shared/_LayoutAuth.cshtml";
}

<div class="auth2-card">
    <h2>Prijava</h2>
    <p>Uloguj se da rezervišeš termin.</p>

    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

        <div class="mb-3">
            <label asp-for="Input.Email" class="form-label">Email</label>
            <input asp-for="Input.Email" class="form-control auth2-input" autocomplete="username" />
            <span asp-validation-for="Input.Email" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.Password" class="form-label">Lozinka</label>
            <input asp-for="Input.Password" class="form-control auth2-input" autocomplete="current-password" />
            <span asp-validation-for="Input.Password" class="text-danger small"></span>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="form-check">
                <input asp-for="Input.RememberMe" class="form-check-input" />
                <label asp-for="Input.RememberMe" class="form-check-label">Zapamti me</label>
            </div>
            <a asp-page="./ForgotPassword" class="small">Zaboravljena lozinka?</a>
        </div>

        <button id="login-submit" type="submit" class="btn btn-primary auth2-btn">
            Uloguj se
        </button>

        <div class="auth2-links">
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Nemaš nalog? Registruj se</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
