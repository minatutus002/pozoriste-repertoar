@model IEnumerable<Pozoriste.Models.Entities.Predstava>
@{
    ViewData["Title"] = "Predstave";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="m-0">Predstave</h2>
    <a class="btn btn-primary" asp-area="Admin" asp-controller="Predstava" asp-action="Create">+ Dodaj</a>
</div>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Slika</th>
            <th>Naziv</th>
            <th>Zanr</th>
            <th>Glumci</th>
            <th>Cena</th>
            <th>Trajanje</th>
            <th class="text-end"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrWhiteSpace(p.SlikaUrl))
                    {
                        <img src="@p.SlikaUrl" alt="@p.Naziv" class="predstava-img-thumb" />
                    }
                    else
                    {
                        <span class="text-muted">-</span>
                    }
                </td>
                <td>@(p.Naziv ?? "-")</td>
                <td>@(p.Zanr?.Naziv ?? "-")</td>
                <td>
                    @if (p.Glumci != null && p.Glumci.Any())
                    {
                        @string.Join(", ", p.Glumci
                            .Select(pg => pg.Glumac?.PunoIme)
                            .Where(x => !string.IsNullOrWhiteSpace(x))
                            .OrderBy(x => x))
                    }
                    else
                    {
                        <span class="text-muted">-</span>
                    }
                </td>
                <td>@p.Cena.ToString("0.00")</td>
                <td>@p.TrajanjeMin min</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary"
                       asp-area="Admin" asp-controller="Predstava" asp-action="Edit" asp-route-id="@p.PredstavaId">Izmeni</a>

                    <form asp-area="Admin" asp-controller="Predstava" asp-action="Delete" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@p.PredstavaId" />
                        <button class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Obrisati predstavu?');">
                            Obriši
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
