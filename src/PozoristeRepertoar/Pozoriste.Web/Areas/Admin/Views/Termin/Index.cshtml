@model IEnumerable<Pozoriste.Models.Entities.Termin>
@{
    ViewData["Title"] = "Termini";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="m-0">Termini</h2>
    <a class="btn btn-primary" asp-area="Admin" asp-controller="Termin" asp-action="Create">+ Dodaj</a>
</div>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Predstava</th>
            <th>Sala</th>
            <th>Datum i vreme</th>
            <th class="text-end"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@(t.Predstava?.Naziv ?? "-")</td>
                <td>@(t.Sala?.Naziv ?? "-")</td>
                <td>@t.DatumVreme.ToString("dd.MM.yyyy HH:mm")</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary"
                       asp-area="Admin" asp-controller="Termin" asp-action="Edit" asp-route-id="@t.TerminId">Izmeni</a>

                    <form asp-area="Admin" asp-controller="Termin" asp-action="Delete" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@t.TerminId" />
                        <button class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Obrisati termin?');">
                            Obriši
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
