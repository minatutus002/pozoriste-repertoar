@model Pozoriste.Models.Entities.Glumac
@{
    ViewData["Title"] = "Dodaj glumca";
}

<h2 class="mb-3">Dodaj glumca</h2>

<form method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Puno ime</label>
        <input class="form-control" asp-for="PunoIme" />
        <span class="text-danger" asp-validation-for="PunoIme"></span>
    </div>

    <button class="btn btn-primary" type="submit">Sacuvaj</button>
    <a class="btn btn-outline-secondary" asp-area="Admin" asp-controller="Glumac" asp-action="Index">Nazad</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
