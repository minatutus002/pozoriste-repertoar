@model IEnumerable<Pozoriste.Models.Entities.Zanr>
@{
    ViewData["Title"] = "Zanrovi";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="m-0">Zanrovi</h2>
    <a class="btn btn-primary" asp-area="Admin" asp-controller="Zanr" asp-action="Create">+ Dodaj</a>
</div>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Naziv</th>
            <th class="text-end"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var z in Model)
        {
            <tr>
                <td>@z.Naziv</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary"
                       asp-area="Admin" asp-controller="Zanr" asp-action="Edit" asp-route-id="@z.ZanrId">Izmeni</a>

                    <form asp-area="Admin" asp-controller="Zanr" asp-action="Delete" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@z.ZanrId" />
                        <button class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Obrisati zanr?');">
                            Obrisi
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
