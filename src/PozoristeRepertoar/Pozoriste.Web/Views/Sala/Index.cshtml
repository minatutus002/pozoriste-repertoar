@model IEnumerable<Pozoriste.Models.Entities.Sala>

@{
    ViewData["Title"] = "Sale";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="m-0">Sale</h1>
</div>

<div class="row g-3">
    @foreach (var s in Model)
    {
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">@s.Naziv</h5>

                    <div class="text-muted small">ID: @s.SalaId</div>
                    <div class="text-muted small">
                        Redovi: @s.BrojRedova &middot; Sedista po redu: @s.SedistaPoRedu &middot; Kapacitet: @s.Kapacitet
                    </div>

                    <div class="mt-3">
                        <a class="btn btn-outline-primary btn-sm"
                           asp-controller="Repertoar"
                           asp-action="Index"
                           asp-route-salaId="@s.SalaId">
                            Rezervisi termin
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
