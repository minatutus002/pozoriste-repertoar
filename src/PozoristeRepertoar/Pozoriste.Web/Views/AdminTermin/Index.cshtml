@model List<Pozoriste.Models.Entities.Termin>

<h2>Admin - Termini</h2>

<p>
    <a class="btn btn-primary" href="/AdminTermin/Create">Dodaj termin</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Predstava</th>
            <th>Sala</th>
            <th>Datum i vreme</th>
            <th>Akcije</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.TerminId</td>
                <td>@t.Predstava.Naziv</td>
                <td>@t.Sala.Naziv</td>
                <td>@t.DatumVreme.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    <a class="btn btn-sm btn-warning" href="/AdminTermin/Edit/@t.TerminId">Izmeni</a>
                    <a class="btn btn-sm btn-danger" href="/AdminTermin/Delete/@t.TerminId">Obriši</a>
                </td>
            </tr>
        }
    </tbody>
</table>
